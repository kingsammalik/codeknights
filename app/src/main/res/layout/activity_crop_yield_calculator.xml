<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.codeknights.crop_yield_calculator">

    <TextView
        android:id="@+id/Breadth"
        android:layout_width="146dp"
        android:layout_height="36dp"
        android:layout_marginEnd="65dp"
        android:layout_marginTop="56dp"
        android:text="No of plants"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/plants"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginBottom="449dp"
        android:layout_marginEnd="78dp"
        android:ems="10"
        android:inputType="number"
        android:labelFor="@+id/plants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/area"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginBottom="450dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:labelFor="@+id/area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Length" />

    <TextView
        android:id="@+id/Samplearea"
        android:layout_width="184dp"
        android:layout_height="38dp"
        android:layout_marginEnd="211dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Sample area"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Length"
        android:layout_width="95dp"
        android:layout_height="32dp"
        android:layout_marginStart="63dp"
        android:text="Area"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Samplearea" />

    <TextView
        android:id="@+id/Avgnoofpods"
        android:layout_width="206dp"
        android:layout_height="41dp"
        android:layout_marginEnd="189dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="Average no of pods"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area" />

    <EditText
        android:id="@+id/pods"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginEnd="256dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Avgnoofpods" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="292dp"
        android:layout_height="41dp"
        android:layout_marginEnd="103dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="Average no of seeds in a pod"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pods" />

    <EditText
        android:id="@+id/seeds"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginBottom="209dp"
        android:layout_marginEnd="258dp"
        android:layout_marginStart="63dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Calculate"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="155dp"
        android:layout_marginStart="154dp"
        android:text="Calculate"
        app:layout_constraintBottom_toTopOf="@+id/Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="173dp"
        android:layout_marginStart="63dp"
        android:text="Result"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        app:layout_constraintBottom_toTopOf="@+id/Report"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Report"
        android:layout_width="158dp"
        android:layout_height="58dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="123dp"
        android:layout_marginStart="130dp"
        android:text="Generate Report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/Crops"
        android:layout_width="243dp"
        android:layout_height="43dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seeds"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Spinner
        android:id="@+id/Region"
        android:layout_width="237dp"
        android:layout_height="37dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pods"
        app:layout_constraintTop_toBottomOf="@+id/Avgnoofpods" />


</android.support.constraint.ConstraintLayout>
